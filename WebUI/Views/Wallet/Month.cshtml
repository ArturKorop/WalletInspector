@using System.Globalization
@model Domain.Code.Time.Month
@section featured {
    <div style="margin: 0 auto; text-align: center;">
        <p style="display: inline-block">@Html.ActionLink(Model.ThisYear.ToString(CultureInfo.InvariantCulture), "Year", new {year = Model.ThisYear}, null)</p>
        <p style="display: inline-block">@Model.MonthNumber</p> 
        <p style="display: inline-block">@Model.Name</p>
        <div>
            <div style="display: inline-block">@Html.ActionLink("<<<", "PrevMonth", new {currentMonth = new DateTime(@Model.ThisYear, @Model.MonthNumber, 1)})</div>
            <div style="display: inline-block">@Html.ActionLink(">>>", "NextMonth", new {currentMonth = new DateTime(@Model.ThisYear, @Model.MonthNumber, 1)})</div>
        </div>
        <div id="TableMonth">
            <div id="TableMonthLeft">
                <div class="MainMonth">
                    <div class="LableLittle" style="display: inline-block;">N</div>
                    <div class="LabelMiddle" style="display: inline-block;">Day</div>
                    <div class="LabelBig" style="display: inline-block">Item</div>
                    <div class="LabelBig" style="display: inline-block">Price</div>
                    <div class="LabelBig" style="display: inline-block">Tag</div>
                    <div class="LabelBig" style="display: inline-block">Actions</div>
                    <div></div>
                </div>
                @for (int index = 0; index < 15; index++)
                {
                    Html.RenderPartial("Day", Model.Days[index]);
                }
            </div>
            <div id="TableMonthRight">
                <div class="MainMonth">
                    <div class="LableLittle" style="display: inline-block;">N</div>
                    <div class="LabelMiddle" style="display: inline-block;">Day</div>
                    <div class="LabelBig" style="display: inline-block">Item</div>
                    <div class="LabelBig" style="display: inline-block">Price</div>
                    <div class="LabelBig" style="display: inline-block">Tag</div>
                    <div class="LabelBig" style="display: inline-block">Actions</div>
                    <div></div>
                </div>
                @for (int index = 15; index < Model.Days.Length; index++)
                {
                    Html.RenderPartial("Day", Model.Days[index]);
                }
            </div>
        </div>
        <div>
            Total cost: @Model.Statistic.GetMonthTotalSum()
        </div>
        <div>
            @Html.ActionLink("Total statistic", "MonthTotalStatistic", new { currentMonth = new DateTime(@Model.ThisYear, @Model.MonthNumber, 1) })
        </div>
    </div>
}